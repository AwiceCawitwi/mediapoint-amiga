CC = sc

CFLAGS = DEFINE=TINY DATA=FAR GST=nb:all.sym NMINC NOSTKCHK STRMERGE STREQ IDIR=nb:
LFLAGS = SMALLCODE SMALLDATA NODEBUG

APP1 = ExtTC

APP10 = $(APP1).o lib:/source/_main.o tempoeditor.o inputevent.o gen:GenInit.o\
        ph:functions.o itc.o etc.o
.SUFFIXES:
.SUFFIXES:	.o	.c	.h

all: $(APP1)

$(APP1): $(APP10)
	slink <WITH <
FROM lib:c.o $(APP10)
LIBRARY lib:sc.lib lib:amiga.lib
TO $(APP1) $(LFLAGS)
MAP $(APP1).map H
<

.c.o:
	$(CC) $(CFLAGS) $*.c

.a.o:
	$(AS) $*.a
