CC = sc

CFLAGS = DEBUG=LINE DEFINE=TINY DATA=NEAR NMINC NOSTKCHK SAVEDS GST=nb:all.sym
LFLAGS = SMALLCODE SMALLDATA NODEBUG

APP1  = prefs_seg
APP10 = prefs_seg.o selectmon.o monsfuncs.o\
				sc:source/_main.o\
				mpri:errors.o

.SUFFIXES:
.SUFFIXES:	.o	.c	.h

all: $(APP1)

$(APP1): $(APP10)
	slink <WITH <
FROM lib:c.o $(APP10)
LIBRARY lib:sc.lib
# lib:amiga.lib lib:debug.lib
TO $(APP1) $(LFLAGS)
MAP $(APP1).map H
<
	cop

.c.o:
	$(CC) $(CFLAGS) $*.c

.a.o:
	$(AS) $(AFLAGS) $*.a
